<section class="people">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <form id="settings">
          <h3>Settings</h3>
          <p>
            <label>Name</label>
            <input id="full_name" name="full_name" class="form-control" value="<%= me.full_name %>" />
          </p>
          <p>
            <label>Twitter Username</label>
            <input id="twitter" name="twitter" class="form-control" value="<%= me.twitter %>" />
          </p>
          <p>
            <label>Github Username</label>
            <input id="github" name="github" class="form-control" value="<%= me.github %>" />
          </p>
          <ul class="nav nav-pills">
            <li><button class="btn btn-primary">Save</button></li>
          <ul>
        </form>
      </div>
    </div>
  </div>
</section>