<div id="navbar"></div> 

<section class="people">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <ul class="nav orchestra-side-nav">
          <li><a href="/">What's up?</a></li>
          <li class="active"><a href="/people">People</a></li>
          <li><a href="/actions">Sections</a></li>
        </ul>
      </div>
      <div class="col-md-10">
        <h3>People <span class="pull-right"><small><a href="#"><i class="fa fa-fw fa-plus"></i></a></small></span></h3>

        <table class="table">
          <% _.each(people, function(person) { %>
            <tr class="person">
              <td class="avatar">
                <img src="http://placehold.it/38x38" />
              </td>
              <td>
                <span class="name"><%= person.full_name %></span>
                <span class="title"><%= person.title %></span>
              </td>
              <td class="text-center">
                <span class="location"><%= person.location %></span>
              </td>
              <td class="text-right">
                <i class="fa fa-fw fa-github"></i>
                <i class="fa fa-fw fa-twitter"></i>
                <i class="fa fa-fw fa-envelope-o"></i>
              </td>
            </tr>
          <% }); %>
        </table>
      </div>
    </div>
  </div>
</section>